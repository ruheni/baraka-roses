{
  "name": "inventory-nexus",
  "version": "1.0.0",
  "author": "Ruheni Alex",
  "description": "Baraka Roses Inventory management - GraphQL API using Nexus, Prisma and Postgresql",
  "license": "ISC",
  "keywords": [
    "Nexus",
    "GraphQL",
    "TypeScript",
    "Prisma",
    "Postgresql"
  ],
  "scripts": {
    "dev": "nexus dev",
    "build": "nexus build",
    "start": "node .nexus/build",
    "format": "npx prettier --write './**/*.{ts,md}'",
    "test": "jest"
  },
  "dependencies": {
    "@prisma-multi-tenant/client": "^2.3.1",
    "@types/nodemailer": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^3.1.12",
    "nexus": "^0.26.1",
    "nexus-plugin-auth0": "^0.1.1",
    "nexus-plugin-prisma": "^0.17.0",
    "nexus-plugin-shield": "^0.2.0",
    "nodemailer": "^6.4.11",
    "pg": "^8.3.3"
  },
  "devDependencies": {
    "@prisma/cli": "^2.7.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "useTabs": true,
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "./tests/nexus-test-environment.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,md}": [
      "prettier --write"
    ]
  }
}
